{{#each usuarios}}
<div class="panel-header panel-header-md">
    <h3 class="mx-4 my-3 text-light text-left">Deseja Editar o usuário {{NOME}}?</h3> 
</div>
<div class="content">
        <div class="row">
          <div class="col-md-8">
            <div class="card">              
              <div class="card-body">
                <form action="/usuario/modificar" method="POST">
                  <div class="row">
                    <div class="col-md-5 pr-1">
                      <div class="form-group">
                        <input type="hidden" id="id" name="id" value="{{IDUSUARIO}}">
                        <label for="nome">Nome:</label>
                        <input type="text" id="nome" name="nome" class="form-control" value="{{NOME}}" required>
                      </div>
                    </div>
                    <div class="col-md-3 px-1">
                      <div class="form-group">
                        <label for="email">E-mail: </label>
                        <input type="email" id="email" name="email" class="form-control" value="{{EMAIL}}" required>
                      </div>
                    </div>
                  
                  </div>
                  <div class="row mt-1">
                      
                      <div class="form-group mx-3">                    
                        <a href="/usuario" class="btn btn-primary ">Voltar</a>
                        <button type="submit" class="btn btn-success ">Slavar Alterações</button>
                      </div>
                    
                  </div>
                </form>
                 
              </div>
            </div>
          </div>
        </div>
</div>

{{/each}}